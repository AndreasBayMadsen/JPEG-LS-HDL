    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: waveform_to_image",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "args": [
              "./camera_measurements.csv"  
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: transmit_image",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "args": [
                "../kodak_dataset/no_border_low_res.ppm",
                "-ptx",
                "/dev/ttyUSB1"
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "args": [
                "../kodak_dataset/no_border_low_res.ppm",
                "-w",
                "32"
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "args": [
                "../kodak_dataset/sim_output_2",
                "-r",
                "512",
                "-c",
                "768",
                "--analyze",
                "-o",
                "../kodak_dataset/kodim01.ppm"
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}